<div class="row align-items-center mb-5 mt-3">
  <div class="col-lg-7">
    <img
      class="img-fluid rounded mb-4 mb-lg-0"
      src="/images/graph.png"
      alt=""
    />
  </div>
  <div class="col-lg-5">
    <div class="data-form">
      <form class="form-signin" action="/subscribers/create" method="POST">
        <h2 class="form-signin-heading">Create a new subscriber:</h2>
        <input
          type="text"
          name="name"
          id="inputName"
          class="form-control my-3"
          placeholder="Name"
          autofocus
        />
        <input
          type="email"
          name="email"
          id="inputEmail"
          class="form-control my-3"
          placeholder="Email address"
          required
        />
        <input
          type="text"
          name="mobileNum"
          id="inputMobile"
          pattern="[0-9]{11}"
          class="form-control my-3"
          placeholder="Mobile (optional)"
        />
        <input
          type="text"
          name="zipCode"
          id="inputZipCode"
          pattern="[0-9]{5}"
          class="form-control my-3"
          placeholder="Zip Code"
          required
        />
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Subscribe
        </button>
      </form>
    </div>
  </div>
</div>
