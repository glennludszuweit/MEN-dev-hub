<div class="row align-items-center mt-3">
  <h1 class="pb-3">Subscriber Data for <%= subscriber.name %></h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <td>
        <%= subscriber.name %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= subscriber.email%>
      </td>
    </tr>
    <tr>
      <th>Mobile</th>
      <td>
        <%= subscriber.mobileNum%>
      </td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td>
        <%= subscriber.zipCode%>
      </td>
    </tr>
  </table>

  <p>
    This subscriber has <%= subscriber.courses.length %> associated course(s)
  </p>
</div>
<div class="row mt-3 mb-5">
  <div class="col-md-4">
    <div>
      <a
        class="btn btn-warning w-100"
        href="<%=`/subscribers/${subscriber._id}/edit`%>"
      >
        Edit Subscriber Details
      </a>
    </div>
  </div>
  <div class="col-md-4">
    <div>
      <a
        class="btn btn-danger w-100"
        href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')"
        a
        >Delete</a
      >
    </div>
  </div>
  <div class="col-md-4">
    <div>
      <a class="btn btn-success w-100" href="/subscribers"
        >View all subscribers</a
      >
    </div>
  </div>
</div>
