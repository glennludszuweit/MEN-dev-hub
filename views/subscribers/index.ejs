<div class="align-items-center mt-3 mb-3">
  <h2 class="my-3">Subscribers</h2>
  <% if (loggedIn && currentUser.isAdmin) { %>
  <div class="my-3">
    <a class="btn btn-secondary" href="/subscribers/new">Add Subscriber</a>
  </div>
  <% } %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <% if (loggedIn && currentUser.isAdmin) { %>
        <th>Edit</th>
        <th>Delete</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% subscribers.forEach(subscriber => { %>
      <tr>
        <td>
          <a href="<%= `/subscribers/${subscriber._id}` %>">
            <%= subscriber.name %>
          </a>
        </td>
        <td>
          <%= subscriber.email %>
        </td>
        <% if (loggedIn && currentUser.isAdmin) { %>
        <td>
          <a href="<%=`subscribers/${subscriber._id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <a
            href="<%= `subscribers/${subscriber._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')"
            a
            >Delete</a
          >
        </td>
        <% } %>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
