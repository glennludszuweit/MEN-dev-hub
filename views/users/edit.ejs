<!DOCTYPE html>
<html>
  <%- include("../partials/_head") %>
  <body>
    <%- include("../partials/_navigation") %>

    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <img src="/images/graph.png" alt="" />
        </div>
        <div class="col-sm-6">
          <h1>Create new User</h1>
          <form class="contact-form" action="/users/:id/update" method="post">
            <input
              class="w-100 mt-2 mb-2 p-2"
              type="text"
              name="firstName"
              value="<%= user.name.firstName %> "
              placeholder="First Name"
              autofocus
              required
            />
            <input
              class="w-100 mt-2 mb-2 p-2"
              type="text"
              name="lastName"
              value="<%= user.name.lastName %> "
              placeholder="Last Name"
              autofocus
              required
            />
            <input
              class="w-100 mt-2 mb-2 p-2"
              type="email"
              name="email"
              value="<%= user.email %> "
              placeholder="Email"
              autofocus
              required
            />
            <input
              class="w-100 mt-2 mb-2 p-2"
              type="text"
              name="telNumber"
              value="<%= user.telNumber %> "
              placeholder="Mobile (optional)"
              autofocus
            />
            <input
              class="w-100 mt-2 mb-2 p-2"
              type="password"
              name="password"
              value="<%= user.password %> "
              placeholder="Password"
              autofocus
              required
            />
            <div>
              <button class="button btn mt-2 mb-2" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
