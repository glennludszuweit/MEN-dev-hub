<div class="row align-items-center mb-3 mt-3">
  <div class="col-lg-7">
    <img
      class="img-fluid rounded mb-4 mb-lg-0"
      src="/images/graph.png"
      alt=""
    />
  </div>
  <div class="col-lg-5">
    <div class="data-form">
      <form
        class="form-signin"
        method="POST"
        action="<%=`/users/${user._id}/update?_method=PUT`%>"
      >
        <h2 class="form-signin-heading">Edit user:</h2>
        <input
          type="text"
          name="first"
          id="inputFirstName"
          class="form-control my-3"
          value="<%= user.name.first %>"
          placeholder="First"
          autofocus
        />
        <input
          type="text"
          name="last"
          id="inputLastName"
          class="form-control my-3"
          value="<%= user.name.last %>"
          placeholder="Last"
        />
        <input
          type="password"
          name="password"
          id="inputPassword"
          class="form-control my-3"
          value="<%= user.password %>"
          placeholder="Password"
          required
        />
        <input
          type="email"
          name="email"
          id="inputEmail"
          class="form-control my-3"
          value="<%= user.email %>"
          placeholder="Email address"
          required
        />
        <input
          type="text"
          name="mobileNum"
          id="inputMobile"
          pattern="[0-9]{11}"
          class="form-control my-3"
          value="<%= user.mobileNum %>"
          placeholder="Mobile (optional)"
        />
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>
