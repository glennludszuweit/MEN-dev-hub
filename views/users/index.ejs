<!DOCTYPE html>
<html>
  <%- include("../partials/_head") %>
  <body>
    <%- include("../partials/_navigation") %>

    <div class="container">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone/Mobile</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td>
              <a href="<%= `/users/${user._id}` %>">
                <%= user.fullName %>
              </a>
            </td>
            <td><%= user.email %></td>
            <td><%= user.telNumber %></td>
            <td>
              <a href="<%= `/users/${user._id}/edit` %> ">
                Edit
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
