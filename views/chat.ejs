<div class="container">
  <h1 class="text-center">Chat with community</h1>
  <hr />
  <div class="py-2"></div>
  <div class="row rounded-lg overflow-hidden shadow">
    <div class="col-3 px-0">
      <div class="bg-white">
        <div class="bg-gray px-4 py-2 bg-light">
          <p class="h5 mb-0 py-1">Users</p>
        </div>

        <div class="messages-box">
          <% users.forEach(user => { %>
          <div class="list-group rounded-0 border-0">
            <a
              href="#"
              class="list-group-item list-group-item-action list-group-item-light rounded-0"
            >
              <div class="media">
                <!-- <img
                  src="https://res.cloudinary.com/mhmd/image/upload/v1564960395/avatar_usae7z.svg"
                  alt="user"
                  width="50"
                  class="rounded-circle"
                /> -->
                <div class="media-body py-2">
                  <h6 class="mb-0"><%= user.fullName %></h6>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <!-- Chat Box-->
    <div class="col-9 px-0">
      <div class="px-4 py-3 chat-box bg-white">
        <!-- Sender Message-->
        <div id="chat">
          <!-- <div class="media w-50 mb-3">
