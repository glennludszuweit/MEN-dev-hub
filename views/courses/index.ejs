<div class="align-items-center mt-3 mb-3">
  <h2 class="my-3">Courses</h2>
  <div class="my-3">
    <a class="btn btn-secondary" href="/courses/new">Add Course</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% courses.forEach(course => { %>
      <tr>
        <td>
          <a href="<%= `/courses/${course._id}` %>">
            <%= course.title %>
          </a>
        </td>
        <td>
          <%= course.description %>
        </td>
        <td>
          <a href="<%=`courses/${course._id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <a
            href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')"
            a
            >Delete</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
