<div class="align-items-center mt-3 mb-3">
  <h2 class="my-3">Courses</h2>
  <div class="my-3">
    <a class="btn btn-secondary" href="/courses/new">Add Course</a>
  </div>
  <% courses.forEach(course => { %>
  <hr />
  <div class="row mb-3">
    <div class="col-sm-3">
      <img class="img-thumbnail" src="/images/fruit.jpg" alt="Course Image" />
    </div>
    <div class="col-lg-7">
      <h3>
        <a href="<%= `/courses/${course._id}` %>">
          <%= course.title %>
        </a>
      </h3>
      <p>
        <%= course.description %>
      </p>
      <a class="btn btn-primary" href="3">Join</a>
    </div>
    <div class="col-md-2 mt-2">
      <h4>$ <%= course.cost %></h4>
      <a href="<%=`courses/${course._id}/edit`%>"> Edit</a>
      <a
        href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')"
        >Delete</a
      >
    </div>
  </div>
  <% }); %>
</div>
