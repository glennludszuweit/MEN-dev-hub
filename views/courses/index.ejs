<div class="mt-3 mb-3">
  <div class="row my-3">
    <div class="col-lg-6">
      <h2>Courses</h2>
    </div>
    <div class="col-lg-6">
      <form action="">
        <div class="form-group">
          <div class="input-group mb-2">
            <input
              type="text"
              name="search"
              class="form-control rounded"
              id="inlineFormInputGroup"
              placeholder="Search course here ..."
            />
            <div class="input-group-prepend">
              <a type="submit" class="input-group-text border-0 bg-white">
                <i class="fas fa-search"></i>
              </a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <% if (loggedIn && currentUser.isAdmin) { %>
  <div class="my-3">
    <a class="btn btn-secondary" href="/courses/new">Add Course</a>
  </div>
  <% } %>
  <div id="coursesIndex"></div>
</div>
