<div class="row align-items-center mb-3 mt-3">
  <div class="col-lg-7">
    <img
      class="img-fluid rounded mb-4 mb-lg-0"
      src="/images/people.jpg"
      alt=""
    />
  </div>
  <div class="col-lg-5">
    <div class="data-form">
      <form
        class="form-signin"
        action="<%=`/courses/${course._id}/update?_method=PUT`%>"
        method="POST"
      >
        <h2 class="form-signin-heading">Edit course:</h2>
        <input
          type="text"
          name="title"
          id="inputTitle"
          class="form-control my-3"
          value="<%= course.title %>"
          placeholder="Title"
          autofocus
        />
        <input
          type="text"
          name="description"
          id="inputDescription"
          class="form-control my-3"
          value="<%= course.description %>"
          placeholder="Description"
        />
        <input
          type="text"
          name="zipCode"
          id="inputZipCode"
          pattern="[0-9]{5}"
          class="form-control my-3"
          value="<%= course.zipCode %>"
          placeholder="Zip Code"
          required
        />
        <input
          type="text"
          name="maxStudents"
          id="inputMaxStudents"
          pattern="\d*"
          class="form-control my-3"
          value="<%= course.maxStudents %>"
          placeholder="Max Students"
          required
        />
        <input
          type="text"
          name="cost"
          id="inputCost"
          pattern="\d*"
          class="form-control my-3"
          value="<%= course.cost %>"
          placeholder="Cost"
          required
        />
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>
