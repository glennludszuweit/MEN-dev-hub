<div class="row align-items-center mt-3">
  <div class="container">
    <h1 class="pb-3">Course Data for <%= course.title %></h1>
    <div class="row mb-3">
      <div class="col-lg-6">
        <img
          class="img-thumbnail"
          src="<%= course.image %>"
          alt="Course Image"
        />
      </div>

      <div class="col-lg-6">
        <table class="table">
          <tr>
            <th>Title</th>
            <td>
              <%= course.title %>
            </td>
          </tr>
          <tr>
            <th>Description</th>
            <td>
              <%= course.description%>
            </td>
          </tr>
          <tr>
            <th>Zip Code</th>
            <td>
              <%= course.zipCode%>
            </td>
          </tr>
          <tr>
            <th>Max Students</th>
            <td>
              <%= course.maxStudents%>
            </td>
          </tr>
          <tr>
            <th>Cost</th>
            <td>$ <%= course.cost%></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row mt-3 mb-3">
  <% if (loggedIn) { %>
  <div class="col-md-4 mb-3">
    <div>
      <a
        class="btn btn-warning w-100"
        href="<%=`/courses/${course._id}/edit`%>"
      >
        Edit Course Details
      </a>
    </div>
  </div>
  <div class="col-md-4 mb-3">
    <div>
      <a
        class="btn btn-danger w-100"
        href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')"
        a
        >Delete</a
      >
    </div>
  </div>
  <% } else { %>
  <div class="col-md-4 mb-3">
    <div>
      <a class="btn btn-primary w-100" href="#">Join</a>
    </div>
  </div>
  <% } %>
  <div class="col-md-4 mb-3">
    <div>
      <a class="btn btn-success w-100" href="/courses">View all courses</a>
    </div>
  </div>
</div>
